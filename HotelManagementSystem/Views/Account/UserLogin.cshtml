@model UserLogInModel
@{
    ViewData["Title"]="User Login";
}

<div class="container my-5 main_box" style="width:400px; height:450px; border:dotted black 1px; border-radius:15px;">
    <div class="container" style="display:flex; justify-content:center; font-size:28px;margin-top:17px">User Login Page</div>
    @using (Html.BeginForm("UserLogin", "Account", method:FormMethod.Post))
    {
        <div class="container my-3">
            <div class="form-group form-check-label my-2">
                <div><label style="margin-bottom:5px" asp-for="Username">Username</label></div>
                <input style="border-radius:10px" class="form-control " type="text" asp-for="Username" />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="form-group form-check-label my-2">
                <div><label style="margin-bottom:5px; margin-top:15px;" asp-for="Password">Password</label></div>
                <input style="border-radius:10px" class="form-control" type="password" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group form-check-label my-1 mx-2">
                <label style="margin-bottom:5px; margin-top:15px;" asp-for="RememberMe">Remember me</label>
                <input type="checkbox" asp-for="RememberMe"/>
            </div>
            <button class="btn my-3" style="margin-bottom:12px; margin-top:10px;height: 100;" type="submit">Login</button>
        </div>
    }
</div>